{
  "name": "Python Tutor Student Environment",
  "image": "ghcr.io/h-arnold/pythonexercisegeneratoranddistributor/student-environment:latest",

  // Configure VS Code settings
  "customizations": {
    "vscode": {
      // Extensions to install - minimal set for student exercises
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "donjayamanne.vscode-default-python-kernel"
      ],

      // VS Code settings
      "settings": {
        // Python configuration
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests",
          "-q"
        ],
        "python.analysis.typeCheckingMode": "basic",
        "python.formatting.provider": "none",
        
        // Editor configuration
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        
        // File exclusions
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.pytest_cache": true
        },
        
        // Jupyter configuration
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        
        // Workbench configuration - keep environment simple
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "workbench.welcomePage.walkthroughs.openOnInstall": false,
        "workbench.remoteIndicator.showExtensionRecommendations": false,
        "workbench.secondarySideBar.defaultVisibility": "hidden",
        "workbench.sideBar.location": "left",
        "workbench.panel.opensMaximized": "never",
        "workbench.statusBar.visible": false,
        "zenMode.silentNotifications": true
        }
    }
  },


  // Post-create command to install the exercise package if pyproject.toml exists
  "postCreateCommand": "[ -f pyproject.toml ] && (uv sync && . .venv/bin/activate) || echo 'Warning: No pyproject.toml found. The environment may not be properly configured.'",

  // Use the 'vscode' user which already exists in the base image
  "remoteUser": "vscode",

  // Environment variables
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  },

  // Features to disable (keep minimal)
  "features": {}
}
